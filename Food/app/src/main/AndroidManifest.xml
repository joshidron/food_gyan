<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodGyan"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".RecipeDetailActivity"
            android:exported="false" />
        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FoodGyan.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Auth Activity -->
        <activity
            android:name=".AuthActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.FoodGyan" /> <!-- Feature Activities -->
        <activity
            android:name=".RecipeActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" />
        <activity
            android:name=".NutritionActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" />
        <activity
            android:name=".MealPlanActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" />
        <activity
            android:name=".GroceryActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" />
        <activity
            android:name=".TipsActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodGyan" />
    </application>

</manifest>