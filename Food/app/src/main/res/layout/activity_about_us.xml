<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_about_us" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About Us"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Team Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:padding="8dp">

            <!-- Dron Joshi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/dron"
                    android:contentDescription="Dron Joshi"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dron Joshi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="126dp"
                    android:paddingBottom="10dp"
                    android:text="Frontend &amp; Backend Developer \n- Designs and develops user interfaces and server logic\n- Collaborates with cross-functional teams"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <!-- Social Links -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/instagram_dron"
                        android:layout_width="51dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="Instagram"
                        android:src="@drawable/ic_instagram" />

                    <ImageView
                        android:id="@+id/linkedin_dron"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_linkedin"
                        android:contentDescription="LinkedIn" />
                </LinearLayout>
            </LinearLayout>

            <!-- Naitik Joshi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="349dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Naitik Joshi"
                    android:scaleType="centerCrop"
                    android:src="@drawable/naitik" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naitik Joshi"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="126dp"
                    android:paddingBottom="10dp"
                    android:text="UI/UX Designer\n- Crafts intuitive user experiences and engaging interfaces\n- Conducts user research and usability testing"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/instagram_naitik"
                        android:layout_width="44dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="30dp"
                        android:contentDescription="Instagram"
                        android:src="@drawable/ic_instagram" />

                    <ImageView
                        android:id="@+id/linkedin_naitik"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="LinkedIn"
                        android:src="@drawable/ic_linkedin" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
