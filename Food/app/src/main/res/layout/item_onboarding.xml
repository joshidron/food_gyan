<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:padding="24dp">

    <!-- Image View instead of Lottie -->
    <ImageView
        android:id="@+id/imageOnboard"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerInside" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleOnboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:layout_marginBottom="16dp"
        android:text="Welcome to FoodGyan" />

    <!-- Description -->
    <TextView
        android:id="@+id/descOnboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Discover delicious recipes and master your cooking skills with our comprehensive guide to culinary excellence."
        android:paddingHorizontal="16dp" />

</LinearLayout>