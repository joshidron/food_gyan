                android:textColor="#FF6B35"
                android:textSize="13sp"
                android:background="@drawable/time_chip_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/detailRecipeDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’ª Difficulty: Easy"
                android:textColor="#4CAF50"
                android:textSize="13sp"
                android:background="@drawable/difficulty_chip_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#DDDDDD" />

        <!-- Ingredients Section -->
        <TextView
            android:id="@+id/ingredientsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§‚ Ingredients"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/detailRecipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:text="â€¢ 2 bunches callaloo (or spinach)\nâ€¢ 1 small onion, chopped\nâ€¢ 1 tomato, diced\nâ€¢ 1 scallion, chopped\nâ€¢ 1 garlic clove, minced\nâ€¢ 1 tbsp olive oil\nâ€¢ 1/4 tsp black pepper\nâ€¢ 1/2 tsp salt\nâ€¢ 1/2 tsp thyme\nâ€¢ 1 Scotch bonnet pepper (optional)\nâ€¢ 1 cup coconut milk (optional for creaminess)\nâ€¢ 1/4 cup carrots, sliced thin\nâ€¢ 1 tsp butter for flavor"
            android:textColor="#444444"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#DDDDDD" />

        <!-- Instructions Section -->
        <TextView
            android:id="@+id/instructionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¨â€ðŸ³ Instructions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/detailRecipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Wash the callaloo thoroughly and remove any tough stems.\n\n2. Heat olive oil in a large pan. SautÃ© onion, garlic, scallion, and tomato until soft and fragrant.\n\n3. Add callaloo, salt, pepper, thyme, and Scotch bonnet pepper. Mix well.\n\n4. Optionally, add coconut milk and carrots for a creamy, colorful flavor.\n\n5. Cover and cook on low heat for 8â€“10 minutes until tender and wilted.\n\n6. Add a teaspoon of butter and stir before serving.\n\n7. Serve hot with boiled dumplings, fried plantains, or steamed rice."
