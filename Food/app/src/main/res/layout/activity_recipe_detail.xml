<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewRecipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:scrollbars="vertical"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Recipe Image -->

        <!-- Recipe Name -->
        <ImageView
            android:id="@+id/detailRecipeImage"
            android:layout_width="323dp"
            android:layout_height="330dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true"
            android:contentDescription="Recipe Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_recipe" />

        <TextView
            android:id="@+id/detailRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Callaloo Jamaican Style"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <!-- Recipe Category -->
        <TextView
            android:id="@+id/detailRecipeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Miscellaneous"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"
            android:gravity="center" />

        <!-- Chips for time & difficulty -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/detailRecipeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
